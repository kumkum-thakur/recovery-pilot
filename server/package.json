{
  "name": "recovery-pilot-server",
  "version": "1.0.0",
  "description": "Production API server for RecoveryPilot - scaled for 2M patients/day",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate": "node dist/migrations/runner.js",
    "migrate:up": "npm run migrate -- up",
    "migrate:down": "npm run migrate -- down",
    "seed": "node dist/seeds/runner.js",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.30.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.0",
    "pino": "^9.6.0",
    "pino-http": "^10.5.0",
    "rate-limiter-flexible": "^5.0.4",
    "uuid": "^13.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^24.10.1",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  }
}
